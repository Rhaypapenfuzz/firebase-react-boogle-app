rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
    match /users/{userId} {
      function validAuth() {
        return request.auth.uid == userId;
      }
      allow write: if validAuth();
    }
  }
}
